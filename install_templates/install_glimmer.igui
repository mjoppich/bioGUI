
## set all variables
PROG=glimmer302b

PROGDIR=$1
if [ -z "${PROGDIR}" ]; then
	PROGDIR=~/bioGUI/progs/
fi

## create progdir
mkdir -p $PROGDIR

#download and unzip
wget http://ccb.jhu.edu/software/glimmer/$PROG.tar.gz -O $PROGDIR/$PROG.tar.gz

cd $PROGDIR
tar -xzf $PROG.tar.gz -C $PROGDIR/

#install prog
cd $PROGDIR/$PROG

./configure -prefix=$PROGDIR/$PROG
make
make check
make install