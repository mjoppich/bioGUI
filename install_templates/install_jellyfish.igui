
## set all variables
PROG=jellyfish-2.2.6

PROGDIR=$1
if [ -z "${PROGDIR}" ]; then
	PROGDIR=~/bioGUI/progs/
fi

## create progdir
mkdir -p $PROGDIR

#download and unzip
wget https://github.com/gmarcais/Jellyfish/releases/download/v2.2.6/$PROG.tar.gz -O $PROGDIR/$PROG.tar.gz

cd $PROGDIR
tar -xzf $PROG.tar.gz -C $PROGDIR/

#install prog
cd $PROGDIR/$PROG

./configure --prefix=$PROGDIR/$PROG
make
make check
make install